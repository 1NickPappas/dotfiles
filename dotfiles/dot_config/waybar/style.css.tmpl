{{- $colors := index .themes .theme.name -}}
/* Waybar {{ .theme.name }} theme */

* {
    font-family: "JetBrainsMono Nerd Font", "Font Awesome 6 Free";
    font-size: 13px;
}

window#waybar {
    background-color: rgba({{ $colors.base_rgb }}, 0.9);
    color: {{ $colors.text }};
    border-bottom: 2px solid {{ $colors.blue }};
}

#workspaces button {
    padding: 0 8px;
    color: {{ $colors.text }};
    background: transparent;
    border: none;
    border-radius: 0;
}

#workspaces button:hover {
    background: rgba({{ $colors.blue_rgb }}, 0.2);
}

#workspaces button.active {
    background: {{ $colors.blue }};
    color: {{ $colors.base }};
}

#workspaces button.urgent {
    background: {{ $colors.red }};
}

#clock,
#battery,
#cpu,
#memory,
#network,
#pulseaudio,
#tray {
    padding: 0 10px;
    margin: 0 4px;
}

#clock {
    color: {{ $colors.mauve }};
    font-weight: bold;
}

#battery {
    color: {{ $colors.green }};
}

#battery.charging {
    color: {{ $colors.green }};
}

#battery.warning:not(.charging) {
    color: {{ $colors.yellow }};
}

#battery.critical:not(.charging) {
    color: {{ $colors.red }};
    animation: blink 0.5s linear infinite alternate;
}

@keyframes blink {
    to {
        color: {{ $colors.base }};
        background-color: {{ $colors.red }};
    }
}

#cpu {
    color: {{ $colors.sky }};
}

#memory {
    color: {{ $colors.yellow }};
}

#network {
    color: {{ $colors.teal }};
}

#network.disconnected {
    color: {{ $colors.red }};
}

#pulseaudio {
    color: {{ $colors.peach }};
}

#pulseaudio.muted {
    color: {{ $colors.overlay0 }};
}

#tray {
    padding: 0 10px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
}

#window {
    color: {{ $colors.text }};
    padding: 0 10px;
}
