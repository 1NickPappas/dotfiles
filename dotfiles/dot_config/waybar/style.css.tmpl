{{- $colors := index .themes .theme.name -}}
/* Waybar {{ .theme.name }} theme - Compact Icon Style */

* {
    font-family: "JetBrainsMono Nerd Font", "Font Awesome 6 Free";
    font-size: 14px;
    min-height: 0;
}

window#waybar {
    background-color: rgba({{ $colors.base_rgb }}, 0.9);
    color: {{ $colors.text }};
    border-bottom: 2px solid {{ $colors.blue }};
}

/* Workspaces */
#workspaces {
    margin: 0 4px;
}

#workspaces button {
    padding: 0 6px;
    color: {{ $colors.overlay0 }};
    background: transparent;
    border: none;
    border-radius: 4px;
    margin: 2px 1px;
    min-width: 20px;
    transition: all 0.2s ease;
}

#workspaces button:hover {
    background: rgba({{ $colors.blue_rgb }}, 0.2);
    color: {{ $colors.text }};
}

#workspaces button.active {
    background: {{ $colors.blue }};
    color: {{ $colors.base }};
    font-weight: bold;
}

#workspaces button.empty {
    color: {{ $colors.surface1 }};
}

#workspaces button.urgent {
    background: {{ $colors.red }};
    color: {{ $colors.base }};
}

/* Common module styling */
#clock,
#battery,
#cpu,
#memory,
#network,
#pulseaudio,
#custom-expand-icon {
    padding: 0 8px;
    margin: 2px 2px;
    border-radius: 4px;
    transition: all 0.2s ease;
}

#clock:hover,
#battery:hover,
#cpu:hover,
#memory:hover,
#network:hover,
#pulseaudio:hover,
#custom-expand-icon:hover {
    background: {{ $colors.surface0 }};
}

/* Clock */
#clock {
    color: {{ $colors.mauve }};
    font-weight: bold;
}

/* Battery */
#battery {
    color: {{ $colors.green }};
}

#battery.charging {
    color: {{ $colors.green }};
}

#battery.warning:not(.charging) {
    color: {{ $colors.yellow }};
}

#battery.critical:not(.charging) {
    color: {{ $colors.red }};
    animation: blink 0.5s linear infinite alternate;
}

@keyframes blink {
    to {
        color: {{ $colors.base }};
        background-color: {{ $colors.red }};
    }
}

/* CPU */
#cpu {
    color: {{ $colors.sky }};
}

/* Memory */
#memory {
    color: {{ $colors.yellow }};
}

/* Network */
#network {
    color: {{ $colors.teal }};
}

#network.disconnected {
    color: {{ $colors.red }};
}

#network.ethernet {
    color: {{ $colors.green }};
}

/* Pulseaudio */
#pulseaudio {
    color: {{ $colors.peach }};
}

#pulseaudio.muted {
    color: {{ $colors.overlay0 }};
}

/* Tray expander group */
#custom-expand-icon {
    color: {{ $colors.overlay1 }};
    font-size: 12px;
}

#custom-expand-icon:hover {
    color: {{ $colors.text }};
}

/* Tray */
#tray {
    padding: 0 4px;
    margin: 2px 2px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background: {{ $colors.red }};
    border-radius: 4px;
}

/* Tray drawer animation children */
.tray-child {
    padding: 0 2px;
}

/* Tooltip styling */
tooltip {
    background-color: {{ $colors.base }};
    border: 1px solid {{ $colors.blue }};
    border-radius: 8px;
}

tooltip label {
    color: {{ $colors.text }};
    padding: 4px 8px;
}
