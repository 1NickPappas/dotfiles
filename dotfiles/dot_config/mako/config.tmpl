{{- $colors := index .themes .theme.name -}}
# Mako notification daemon config - {{ .theme.name }}

# Position and size
anchor=top-right
width=350
height=120
margin=10
padding=12

# Appearance
border-radius=8
border-size=2
font=JetBrainsMono Nerd Font 11

# Theme colors
background-color={{ $colors.base }}
text-color={{ $colors.text }}
border-color={{ $colors.surface0 }}

# Icons
icons=1
max-icon-size=48
icon-location=left

# Behavior
default-timeout=4000
markup=1
format=<b>%s</b>\n%b

# Critical notifications - red background, no auto-dismiss
[urgency=critical]
background-color={{ $colors.red }}
text-color={{ $colors.base }}
border-color={{ $colors.red }}
default-timeout=0

# Low priority - muted colors
[urgency=low]
text-color={{ $colors.overlay0 }}
border-color={{ $colors.overlay0 }}
