# Cross-platform zsh config
export EDITOR=nvim

{{ if eq .chezmoi.os "darwin" -}}
# macOS specific
eval "$(/opt/homebrew/bin/brew shellenv)"
{{ else -}}
# Linux specific
export PATH="$HOME/.local/bin:$PATH"
{{ end -}}

# Common
eval "$(starship init zsh)"
eval "$(zoxide init zsh)"

# Aliases
alias ls='eza'
alias cat='bat'
alias vim='nvim'
